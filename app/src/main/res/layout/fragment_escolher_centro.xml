<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio.Fragmentos.marcar_reserva.EscolherCentro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Marcar_uma_reserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Vamos fazer uma reserva"
            android:textColor="@color/CorAzulEscura"
            android:padding="10dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Escolher_um_centro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/CorAzulEscura"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:text="1ยบ. Escolha um centro:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_centros"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>